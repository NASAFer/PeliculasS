<link rel="stylesheet" href="/public/CSS/css/style.css">
<h1>Editar Película</h1>

<form action="/peliculas/<%= pelicula._id %>/editar" method="POST">
  <label>Título:</label>
  <input type="text" name="titulo" value="<%= pelicula.Título %>"><br>

  <label>Actores (separados por coma):</label>
  <input type="text" name="actores" value="<%= pelicula.Actores.join(', ') %>"><br>

  <label>Año:</label>
  <input type="number" name="anio" value="<%= pelicula.Año %>"><br>

  <label>Categoría:</label>
  <input type="text" name="categoria" value="<%= pelicula.Categoría %>"><br>

  <label>Sinopsis:</label>
  <textarea name="sinopsis"><%= pelicula.Sinopsis %></textarea><br>

  <label>Imagen:</label>
  <input type="text" name="imagen" value="<%= pelicula.Imagen %>"><br>

  <button type="submit">Guardar cambios</button>
</form>
